generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Support {
  id String @id @map("id") @db.Uuid @default(uuid())
  ventId String @map("id_desabafo") @db.Uuid
  vent Vent @relation(fields: [ventId], references: [id])

  @@map("apoio")
}

model Vent {
  id String @id @map("id") @db.Uuid @default(uuid())
  title String @map("titulo") @db.VarChar(50)
  description String @map("descricao") @db.VarChar(2500)
  createdAt DateTime @map("created_at") @db.Timestamp @default(now())
  supports Support[]

  @@map("desabafo")
}
